<h1>All Projects</h1>
<table>
  <thead>
    <tr>
      <td>Project Name</td>
      <td>Total Project Size</td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr id="<%= dom_id(project) %>"  class="project-row">
        <td class="name"><%= project.name %></td>
        <td class="total-size"><%= project.total_size %></td>
      </tr>
      <tr>
    <% end %>
  </tbody>
</table>

<style>
  table, th, td {
    border: 1px solid black;
  }
</style>